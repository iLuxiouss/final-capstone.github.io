<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eden Kite - Overview</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="style/todo.css">
    <script src="https://kit.fontawesome.com/68814eaa34.js" crossorigin="anonymous"></script>
    <script src="script/todo.js" defer></script>
</head>
<body>
<!-- Hero Section -->
    <div id="hero">
        <div class="hero-container">
            <div class="hero-wrap">
                <div><a href="/logout" class="logout-btn" type="button">Log-out</a>
                <div class="hero-nav">
                    <li class="nav-list"><a href="/" data-after="Overview" >Overview</a></li>
                    <li class="nav-list"><a href="/todo" data-after="To-Do" style="color: rgb(255, 226, 99);">To-Do</a></li>
                </div>
            </div>
           
        </div>
    </div>



<!-- TODO  -->
    <section class="todo_container">
        <% if (messages.success) { %>
        <div class="success s_container">
                <span ><%= messages.success %></span>
            <i class="fa-solid fa-xmark close_msg"></i>
        </div>
        <% } %>

        
        <form action="/createTodo" class="todo_list_form" method="POST">
            <input name="todoTitle" type="text">
            <button><i class="fa-solid fa-plus"></i></button>
        </form>
        <div class="todo_nav">
            <a href="#" class="active_btn_link">Active <i class="fa-solid fa-list"></i></a>
            <a href="/completed">Completed <i class="fa-solid fa-check"></i></a>
            <a href="/deleted">Deleted <i class="fa-solid fa-trash"></i></a>
           
        </div>
        <div class="todolist_list">
            <% if (todos.length > 0) { %>
                <% todos.forEach(todo => { %>
                    <div class="list todoListContainer todoContainer<%= todo._id %>">
                        <i class="fa-solid fa-pen-to-square edit_btn edit_btn<%= todo._id %>" data-todo-id="<%= todo._id %>"></i>
                        <i class="fa-solid fa-check-to-slot save_btn save_btn<%= todo._id %>" data-todo-id="<%= todo._id %>"></i>
                        <input value="<%= todo.todoTitle %>" class="todo_val edit<%= todo._id %>"/>
                        <div class="actions">
                            <i class="fa-solid fa-trash-can delete_btn" data-todo-id="<%= todo._id %>"></i>
                            <i class="fa-solid fa-check-double complet_btn" data-todo-id="<%= todo._id %>"></i>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No to do list</p>
            <% } %>
           
         
        </div>
    </section>
